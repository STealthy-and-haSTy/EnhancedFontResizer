[
  // The key bindings in here are samples that you can take and use in your
  // own settings; they're grouped according to the manner in which the settings
  // are adjusted, either making the font size decrease, increase, or reset back
  // to the appropriate default.


  //--------------------------------------------------------------------------//


  //------- Global Font Size (Updates Preferences.sublime-settings -------//
  // { "keys": ["super++"], "command": "global_font_size", "args": {"action": "increase"} },
  // { "keys": ["super+keypad_plus"], "command": "global_font_size", "args": {"action": "increase"} },
  // { "keys": ["super+="], "command": "global_font_size", "args": {"action": "increase"} },
  // { "keys": ["super+-"], "command": "global_font_size", "args": {"action": "decrease"} },
  // { "keys": ["super+keypad_minus"], "command": "global_font_size", "args": {"action": "decrease"} },

  // Note; this is the default key binding for focusing the side bar, so you may
  //        want to customize it or disable it.
  // { "keys": ["super+0"], "command": "global_font_size", "args": {"action": "reset"} },


  //--------------------------------------------------------------------------//


  //------- Window Font Size (Updates Window Project Data -------//
  // { "keys": ["super+alt++"], "command": "window_font_size", "args": {"action": "increase"} },
  // { "keys": ["super+alt+keypad_plus"], "command": "window_font_size", "args": {"action": "increase"} },
  // { "keys": ["super+alt+="], "command": "window_font_size", "args": {"action": "increase"} },
