  // { "keys": ["super+alt+keypad_minus"], "command": "window_font_size", "args": {"action": "decrease"} },
  // { "keys": ["super+alt+0"], "command": "window_font_size", "args": {"action": "reset"} },


  //--------------------------------------------------------------------------//


  //------- Syntax Font Size (Updates Syntax sublime-settings -------//
